@model WLXK.SecondHand.Model.Goods

@{
    ViewBag.Title = "编辑商品信息";
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}
@section Header{

}
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>商品管理</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            标题
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            商品类型
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Type)
            @Html.ValidationMessageFor(model => model.Type)
        </div>

        <div class="editor-label">
            商品卖点
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaiDian)
            @Html.ValidationMessageFor(model => model.MaiDian)
        </div>

        <div class="editor-label">
           商品价格
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            商品数量
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Count)
            @Html.ValidationMessageFor(model => model.Count)
        </div>

        <div class="editor-label">
            商品来源
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LaiYuan)
            @Html.ValidationMessageFor(model => model.LaiYuan)
        </div>

        <div class="editor-label">
            商品图片地址
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BigImageAddress)
            @Html.ValidationMessageFor(model => model.BigImageAddress)
        </div>

        <div class="editor-label">
            商品描述
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descript)
            @Html.ValidationMessageFor(model => model.Descript)
        </div>

        <div class="editor-label">
            删除标记
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DelGlag)
            @Html.ValidationMessageFor(model => model.DelGlag)
        </div>

        <div class="editor-label">
            发布时间
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SubTime)
            @Html.ValidationMessageFor(model => model.SubTime)
        </div>

        <div class="editor-label">
            用户ID
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserInfoId)
            @Html.ValidationMessageFor(model => model.UserInfoId)
        </div>

        <div class="editor-label">
           商品图片地址
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SmallImageAddress)
            @Html.ValidationMessageFor(model => model.SmallImageAddress)
        </div>

        <div class="editor-label">
            店铺ID
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ShopingId)
            @Html.ValidationMessageFor(model => model.ShopingId)
        </div>

        <div class="editor-label">
            浏览量
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SeeCount)
            @Html.ValidationMessageFor(model => model.SeeCount)
        </div>

        <p>
            <input type="submit" value="保存" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("回到商品管理", "ListGoods")
</div>