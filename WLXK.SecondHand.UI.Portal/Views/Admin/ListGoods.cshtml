@model IEnumerable<WLXK.SecondHand.Model.Goods>

@{
    ViewBag.Title = "商品管理";
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}
@section Header{

}

<table border="1">
    <tr>
        <th>
            标题
        </th>
        <th>
            价格
        </th>
        <th>
            浏览量
        </th>
        <th>
            是否删除
        </th>
        <th>
            发布时间
        </th>
        <th>
            用户ID
        </th>
        <th>
            店铺ID
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DelGlag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserInfoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShopingId)
            </td>
            <td>
                @Html.ActionLink("编辑", "EditGoods", new { id = item.Id }) |
                @Html.ActionLink("详情", "DetailsGoods", new { id = item.Id }) |
                @Html.ActionLink("删除", "DeleteGoods", new { id = item.Id }) |
            </td>
        </tr>
    }

</table>
