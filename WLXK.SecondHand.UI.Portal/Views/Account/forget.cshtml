@{
    ViewBag.Title = "忘记密码|青职二货街";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
@section Header{
    <link href="/Content/css/Account/forget.css" rel="stylesheet" />
    <script src="/Scripts/jquery-1.8.2.js"></script>
    <script src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/Scripts/Account/forget.js"></script>
}
@section BigTitle{
    安全中心
}
@section SmallTitle{
    找回密码
}

@using (Ajax.BeginForm("forget", new AjaxOptions() { OnSuccess = "AfterSuccess" }))
{

    <h4>找回密码</h4>
    <div class="one_form">
        <span class="user_info">用户名：</span>
        <input class="user_input" id="uid" type="text" value="" name="UserName" maxlength="20" />
    </div>
    <div class="one_form">
        <span class="user_info">邮箱：</span>
        <input class="user_input" type="text" value="" name="Email" id="myemail" />
    </div>
    <div class="one_form">
        <span class="user_info">验证码：</span>
        <input class="user_input" style="width:170px;" type="text" value="" name="code" />
        <div style="height:42px;line-height:42px;margin-left:10px;margin-top:8px;width:80px;float:left;"><img border="0" style="cursor:pointer" id="vaildPic" src="GetValidateCode" alt="" width="70" /></div><a id="dont" style="font-size:12px;color:blue;margin-top:17px;display:block;height:14px;width:50px;cursor:pointer;float:left;">看不清</a>
    </div>
    <div class="one_form">
        <input class="user_input" id="user_submit" type="submit" value="发送验证邮件" />
        <span style="color: red; font-size: 14px;"></span>
    </div>
}

<div id="reg_weixin">
</div>

